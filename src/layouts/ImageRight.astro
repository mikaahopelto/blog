---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AboutMe from '../components/AboutMe.astro';
import FormattedDate from '../components/FormattedDate.astro';
import MainLayout from './MainLayout.astro';
import { ABOUT_ME } from '../consts';

const { title, description, pubDate, updatedDate, heroImage, image } = Astro.props.frontmatter;
---
<MainLayout title={title}>
	<main class="md:grid md:grid-cols-12 md:gap-6 px-[5%] py-10 bg-white">
		<section class="col-span-7 mt-3">
			<article class="py-3 prose">
				<h1 class="text-4xl font-bold">{title}</h1>
				<slot />
			</article>
		</section>
		<section class="col-span-5 md:mt-24">
			<img src={image} class="w-80">
		</section>
	</main>
</MainLayout>